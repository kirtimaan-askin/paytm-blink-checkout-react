{
  "name": "paytm-blink-checkout-react",
  "version": "0.0.4",
  "description": "React based implementation for Paytm Blink Checkout JS",
  "main": "build/commonjs/index.js",
  "unpkg": "build/umd/react-checkout.js",
  "files": [
    "build/commonjs"
  ],
  "scripts": {
    "build-umd": "webpack --config ./config/webpack.config.umd.js",
    "build-common": "webpack --config ./config/webpack.config.commonjs.js",
    "build-all": "rm -rf ./build && npm run build-common && npm run build-umd",
    "package": "npm run build-all && npm pack"
  },
  "keywords": [
    "Paytm",
    "Blink Checkout JS",
    "Checkout JS",
    "Paytm Blink Checkout React",
    "paytm-blink-checkout-react"
  ],
  "author": "Ankit Gupta",
  "license": "ISC",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "npm-pack": "^1.0.0",
    "react": "^19.2.4",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "react-dom": "^19.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paytm/paytm-blink-checkout-react.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
